<h1>
    codieal join here to meet girls</h1>
<section id="feed-post">
    <h4>
        post
    </h4>
    <% if(locals.user) { %>
        <form action="/posts/create" method="post" id="new-post-form">
            <textarea name="content" id="" cols="30" rows="10"></textarea>
            <input type="submit" value="post">
        </form>
        <% } %>
            <ul>
                <% for(var post of posts) {%>

                    <li>
                        <%= post.content %>
                    
                    
                    <%= post.user.name %>
                    <small>
                        <% if(locals.user && (post.user.id==locals.user.id)) { %>
                        <a href="/posts/destroy/<%= post.id %>" >delete post</a>
                        <% } %>
                    </small>
                    
                    <div class="comments">
                        <% if(locals.user) {%>
                           <form action="/comments/create" method="post">
                               <input type="text" name="content">
                               <input type="hidden" value="<%= post._id %>" name="post">
                               <input type="submit">
                           </form>  
                           <% } %>
                       <% for(comment of post.comment) { %>
                        <li style="list-style: none; margin-top: 2px; margin-left: 20px;"><%= comment.content %></li>
                         <small><%= comment.user.name %></small>
                         <small>
                            <!-- <% if(locals.user && (comment.user.id==locals.user.id)) { %> -->
                                <a href="/comments/destroy/<%= comment.id %>" >delete post</a>
                                <!-- <% } %> -->
                         </small>
                       <% } %> 
                    </div>
                    <br>
                    <br>
                    </li>

                        <% } %>
                       
            </ul>
</section>

<section style="margin-top: 35px;">

     <ul>
         <% for(u of all_users) { %>
            <li>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>    
            </li>
         <% } %>
     </ul>

</section>